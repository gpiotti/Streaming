<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ef4b4d"
        android:minHeight="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <ImageView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/titulo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_power_black_36dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back">
            <!--
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programacion"
                android:onClick="showProg"/>
                -->
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="48dp"
                android:paddingRight="16dp"
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp" />

            <!--
            <TextView
                android:id="@+id/connectingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectando..."
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:background="@drawable/back"
                android:visibility="invisible"
                />
                -->

            <ImageButton
                android:id="@+id/playStopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_white_48dp"
                android:background="@null"
                android:paddingBottom="8dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/facebook" />

            <!--
            <ImageButton
            android:id="@+id/reconnecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_autorenew_white_48dp"
            android:background="@null"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"

            />
            -->
            <TextView
                android:id="@+id/connectingText"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectando..."
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                />

            <ImageButton
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram"
                android:background="@null"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"

                android:layout_above="@+id/whatsapp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whatsapp"

                android:background="@null"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"

                android:layout_above="@+id/facebook"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:background="@null"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"

                android:layout_above="@+id/twitter"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                android:background="@null"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"

                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_chrome_reader_mode_white_48dp"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:onClick="showProg" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp">

            <ImageButton
                android:id="@+id/mMuteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_36dp"
                android:paddingLeft="16dp"
                android:background="@null"

                android:layout_alignTop="@+id/volBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:id="@+id/volBar"
                android:progress="10"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:height="36dp"
                android:minHeight="36dp"
                android:maxHeight="36dp"
                android:progressDrawable="@drawable/red_scrubber_progress"
                android:thumb="@drawable/red_scrubber_control"
                android:splitTrack="false"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/mMuteButton"
                android:layout_toEndOf="@+id/mMuteButton" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>





